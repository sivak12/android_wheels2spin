<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
     <TextView
		android:id="@+id/model_label"		
		android:layout_marginLeft="6px"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"  
	    android:text="BIKE :"/>
     
     <TextView
		android:id="@+id/model"
		android:layout_marginLeft="6px"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@id/model_label"  />
   
     <!-- 
    <TextView
		android:id="@+id/reg_no"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@id/model"/>
     -->
       <TextView
		android:id="@+id/owner_name_label"		
		android:layout_marginLeft="6px"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"  
	    android:text="OWNER NAME :"/>
	    
	<TextView
		android:id="@+id/owner_name"
		android:layout_marginLeft="6px"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@id/owner_name_label"/>
        
	 <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button1"
        android:layout_marginTop="72dp"
        android:onClick="bookBike"
        android:text="Book Bike" />
    

</LinearLayout>
